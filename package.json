{
  "name": "electron-typescript-react-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for electron typescript and react",
  "main": "src/main/dist/main/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=prod gulp build",
    "lint:renderer": "tslint -p ./src/renderer/tsconfig.json",
    "lint:main": "tslint -p ./src/main/tsconfig.json",
    "lint:styles": "stylelint \"./src/renderer/styles/**/*.scss\"",
    "lint": "npm run lint:renderer && npm run lint:main && npm run lint:styles",
    "prestart:main": "npm run build",
    "start:main": "electron ./src/main/dist/main/index.js",
    "start:main-dev": "cross-env NODE_ENV=dev gulp start:devwatch",
    "start:renderer-dev": "NODE_ENV=dev webpack-dev-server --config webpack.config.renderer.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "typescript",
    "react",
    "node"
  ],
  "author": "Adarsh",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/redux-logger": "^3.0.6",
    "ajv": "^6.5.2",
    "autoprefixer": "^9.0.2",
    "chai": "^4.1.2",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "del": "^3.0.0",
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "electron-connect": "^0.6.3",
    "enzyme": "^3.3.0",
    "fancy-log": "^1.3.2",
    "file-loader": "^1.1.11",
    "growl": "^1.10.5",
    "gulp": "^4.0.0",
    "lodash": "^4.17.10",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-sass": "^4.9.2",
    "nyc": "^12.0.2",
    "plugin-error": "^1.0.1",
    "postcss": "^7.0.2",
    "postcss-loader": "^2.1.6",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^4.0.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.4.1",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "sinon": "^6.1.4",
    "snyk": "^1.90.0",
    "source-map-loader": "^0.2.3",
    "spawn-sync": "^2.0.0",
    "style-loader": "^0.21.0",
    "stylelint": "8.4.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-loader": "^3.6.0",
    "typesafe-actions": "^2.0.4",
    "typescript": "^3.0.1",
